  <script>
    // 1) ZAT√çM: d√°rky jsou natvrdo v k√≥du (hardcoded).
    const gifts = [
      { id: 1, name: "Lego set", note: "nƒõco mal√©ho, klidnƒõ 200‚Äì500 Kƒç", reservedBy: "" },
      { id: 2, name: "Kniha", note: "sci-fi / cyberpunk", reservedBy: "Petr" },
      { id: 3, name: "K√°vov√© zrno", note: "espresso roast, 250g", reservedBy: "" }
    ];

    const listEl = document.getElementById("list");

    function render() {
      listEl.innerHTML = "";
      for (const g of gifts) {
        const li = document.createElement("li");

        const left = document.createElement("div");
        left.className = "left";

        const gift = document.createElement("div");
        gift.className = "gift";
        gift.textContent = g.name;

        const note = document.createElement("div");
        note.className = "note";
        note.textContent = g.note || "";

        left.append(gift, note);

        const right = document.createElement("div");
        right.className = "right";

        const badge = document.createElement("div");
        badge.className = "badge";
        badge.textContent = g.reservedBy ? `Zamluveno: ${g.reservedBy}` : "Voln√©";

        const btn = document.createElement("button");
        btn.textContent = "Zamluvit";
        btn.disabled = Boolean(g.reservedBy);
        btn.title = g.reservedBy ? "U≈æ je zamluveno" : "Zamluvit tento d√°rek";

        // 2) ZAT√çM: klik jen ‚Äúsimuluje‚Äù rezervaci v pamƒõti (po refreshi zmiz√≠).
        btn.addEventListener("click", () => {
          const name = prompt("Jak se jmenuje≈°?");
          if (!name) return;
          g.reservedBy = name.trim();
          render();
        });

        right.append(badge, btn);
        li.append(left, right);

        listEl.append(li);
      }
    }

    render();
  </script>
